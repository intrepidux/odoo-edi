<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<!--Wizard For Message Box -->
	<record id="wizard_message_form" model="ir.ui.view">
		<field name="name">You Dialog Box Wizard Name</field>
		<field name="model">peppol.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Message" version="7.0">
				<field name="text" colspan="4" nolabel="1" readonly="1"  widget="html"/>                                                            
				<newline/>
				<footer>
					<field name="state" attrs="{'invisible': True}"/>
					<button special="cancel" string="Continiue" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'own_company_info_disparity')]}"/>                             
					<button special="cancel" string="Abort"/>                    
				</footer>                                    
			</form>
		</field>
	</record>   

	<record id="wizard_message_action" model="ir.actions.act_window">
		<field name="name">Your Dialog Box Action Name</field>
		<field name="res_model">peppol.wizard</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record> 
</odoo>